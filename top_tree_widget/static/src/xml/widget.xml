<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
    <img t-name="ListView.row.image"
         t-att-height="widget.height || 16"
         t-att-src="src" />


    <span t-name="ListView.row.bgcolor" t-att-class="'label label-'+widget.bgcolor" >
        <t t-esc="value"/>
    </span>

    <t t-extend="ListView">
        <t t-jquery=".o_list_record_delete" t-operation="inner">
            <span name="delete_select" class="fa fa-trash-o"/>
        </t>
    </t>

</templates>
