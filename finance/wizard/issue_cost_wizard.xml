<?xml version="1.0"?>
<openerp>
    <data>
        <record id="issue_cost_wizard_form" model="ir.ui.view">
            <field name="name">issue.cost.wizard.form</field>
            <field name="model">issue.cost.wizard</field>
            <field name="arch" type="xml">
                <form string="期间发出成本">
                	<group>
	                	<group>
                            <field name='period_id'/>
	                	</group>
                        <footer>
                            <button name="check_month_product_cost" type="object" string="确定" class="oe_highlight"/>
                            or
                            <button name="cancel" special="cancel" type="object" string="取消" class="oe_highlight"/>
                        </footer>
                	</group>
                </form>
            </field>
        </record>
        <record id="issue_cost_wizard_action" model="ir.actions.act_window">
            <field name="name">发出成本</field>
            <field name="res_model">issue.cost.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <!--结账菜单-->

        <menuitem id='issue_cost_wizard_menu' action='issue_cost_wizard_action' parent='checkout_menu' sequence='20'/>

        <record id="month_product_cost_tree" model="ir.ui.view">
            <field name="name">month.product.cost.tree</field>
            <field name="model">month.product.cost</field>
            <field name="arch" type="xml">
                <tree string="产品"  edit="false">
                    <field name="goods_id"/>
                    <field name="period_id"/>
                    <field name="period_begin_qty"/>
                    <field name="period_begin_cost"/>
                    <field name="current_period_out_qty"/>
                    <field name="current_period_out_cost" />
                    <field name="current_period_in_qty" />
                    <field name="current_period_in_cost" />
                    <field name="current_period_remaining_qty"/>
                    <field name = "current_period_remaining_cost"/>
                </tree>
            </field>
        </record>

        <record id="month_product_cost_action" model="ir.actions.act_window">
            <field name="name">发出成本(总)</field>
            <field name="res_model">month.product.cost</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="target"></field>
        </record>
        <menuitem id='month_product_cost_menu' action='month_product_cost_action' parent='checkout_menu' sequence='30'/>
    </data>
</openerp>
